services:

  {{service_name}}:
    image: {{service_image}}

    env_file: "${SERVICE_ROOT}/.env"

    environment:
      PUID: 1000
      GUID: 1000

    # ports:
    #   - 80:80

    ## Base homelab config
    # volumes:
    #  - ${SERVICE_ROOT}/storage: # add storage volume here
    #  - ${SERVICE_ROOT}/config: # add config volume here

    ## Base homelab config
    hostname: ${SERVICE_HOSTNAME}
    container_name: ${SERVICE_NAME}
    restart: unless-stopped

networks:
  default:
   name: ${SERVICE_NETWORK}
  homelab_network_proxy:
   name: ${HOMELAB_NETWORK}
   external: true
